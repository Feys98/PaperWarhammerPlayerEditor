<Page x:Class="WHeditor.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WHeditor"
      mc:Ignorable="d" 
      Title="MainMenu" Width="1024" Height="720">

    <Grid Width="auto" Height="auto" >
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1.4*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>


        <Border  Grid.Column="1" Grid.RowSpan="6" BorderBrush="Black">
            <Border.Background>
                <ImageBrush ImageSource="/WHeditor;component/Images/pagemenu/oldpaper.jpg"/>
            </Border.Background>
        </Border>


        <Label x:Name="MainMenuTitle" 
               Content="TO DO TITLE"
               Grid.Row="0"
               Grid.Column="1"
               HorizontalAlignment="Center" Height="109"  
               VerticalAlignment="Center" Width="388" 
               FontSize="48" FlowDirection="RightToLeft" Background="Black" 
               Foreground="White" 
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
        </Label>

        <Button x:Name="MainMenuButtonNewPlayer"           
                Click="MainMenuButtonNewPlayer_Click" 
                Content="NOWA POSTAC" 
                Grid.Row="2"
                Grid.Column="1"
                VerticalAlignment="Center" 
                Margin="0,0,0,0" 
                Height="100" Width="400"
                FontSize="48" 
                FontWeight="Bold" FontFamily="Microsoft Yi Baiti" 
                Foreground="White" BorderBrush="{x:Null}" OpacityMask="#FF295F19">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="White" Offset="0.003"/>
                </LinearGradientBrush>
            </Button.Background>

        </Button>

        <Button x:Name="MainMenuButtonLoadPlayer" 
                Click="MainMenuButtonLoadPlayer_Click"
                Content="WCZYTAJ POSTAC" 
                Grid.Row="3"
                Grid.Column="1"
                VerticalAlignment="Center" Margin="0,0,0,0" 
                Height="100" Width="400"
                FontSize="48" FontWeight="Bold" FontFamily="Microsoft Yi Baiti" 
                Foreground="White" BorderBrush="{x:Null}">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="White"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <Button x:Name="MainMenuButtonExit" 
                Click="MainMenuButtonExit_Click" 
                Content="WYJSCIE" 
                Grid.Row="4"
                Grid.Column="1"
                VerticalAlignment="Center" 
                Margin="0,0,0,0"
                Height="100" Width="400" 
                FontSize="48" 
                FontWeight="Bold" FontFamily="Microsoft Yi Baiti" Foreground="White" BorderBrush="{x:Null}">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="White"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>


    </Grid>
</Page>








