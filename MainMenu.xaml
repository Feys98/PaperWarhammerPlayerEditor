<Page x:Class="WHeditor.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WHeditor"
      mc:Ignorable="d" 
      Title="MainMenu" Width="Auto">

    <Grid Width="1024" Height="720">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF390000" Offset="1"/>
                <GradientStop Color="#FF3C0101"/>
                <GradientStop Color="Black" Offset="0.5"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="Button1" Content="START (TEST)" HorizontalAlignment="Center" VerticalAlignment="Center" Width="444" Margin="0" Height="94" FontSize="48" FontWeight="Bold" FontFamily="Lucida Handwriting" Click="MainMenuStartButton">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF9A0000" Offset="0.755"/>
                    <GradientStop Color="#FF970000" Offset="0.279"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Page>
